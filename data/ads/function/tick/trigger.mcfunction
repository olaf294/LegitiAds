execute if score .rank_difference ads.config matches 1 run tellraw @a[scores={ads.config=1..}] [{text:"Rank Advantage:  ",color:gray,hover_event:{action:show_text,value:{text:"Whether or not ranked players will see less ads.",color:"#ff55ff"}}},{text:"ᴇɴᴀʙʟᴇᴅ",color:green,underlined:1b,bold:1b}," ",{text:"ᴅɪꜱᴀʙʟᴇᴅ",color:red,underlined:0b,bold:0b,hover_event:{action:"show_text",value:{text:"Click to disable ranks seing less ads.",color:gold}},click_event:{action:"run_command",command:"/trigger ads.config set 1011"}}]

